.scroll-gradient-left,
.scroll-gradient-right
  position: absolute
  top: 0
  bottom: 0
  z-index: $zi.slight + 1
  opacity: 0
  pointer-events: none

.scroll-gradient-left
  left: 0
  background: linear-gradient(90deg, rgba(0, 0, 0, .05), rgba(0, 0, 0, 0))

  &-light
    background: linear-gradient(90deg, var(--c-bg-neutral-extralight), rgba(255, 255, 255, 0))

.scroll-gradient-right
  right: 0
  background: linear-gradient(270deg, rgba(0, 0, 0, .05), rgba(0, 0, 0, 0))

  &-light
    background: linear-gradient(270deg, var(--c-bg-neutral-extralight), rgba(255, 255, 255, 0))
