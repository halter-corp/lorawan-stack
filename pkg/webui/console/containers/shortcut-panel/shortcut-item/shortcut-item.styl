.shortcut
  padding: $cs.s $cs.m
  color: light-dark(var(--c-text-brand-normal), var(--c-text-brand-light))
  background-color: light-dark(var(--c-bg-brand-light), var(--c-bg-brand-bold))
  border-radius: $br.l
  height: 4.5rem
  width: 100%
  display: flex
  align-items: center
  justify-content: center
  gap: $cs.xs
  font-weight: $fw.bold
  border: 0

  +media-query(1304px)
    padding: $cs.xxs $cs.xs

  .icon
    color: light-dark(var(--c-icon-brand-normal), var(--c-text-brand-light))

  &:hover
    cursor: pointer
    background-color: light-dark(var(--c-bg-brand-semilight), var(--c-bg-brand-heavy))

  &-panel
    height: unset
    aspect-ratio: 1 / 1
    box-sizing: border-box
