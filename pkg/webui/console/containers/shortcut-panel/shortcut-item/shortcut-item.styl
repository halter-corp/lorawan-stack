.shortcut-tooltip
  padding: $cs.xs $cs.m 0.6rem

.shortcut
  padding: $cs.s $cs.m
  background: var(--c-bg-brand-light)
  border-radius: $br.l
  height: 4.5rem
  width: 100%
  display: flex
  align-items: center
  justify-content: center
  border: 0

  .icon
    color: var(--c-icon-brand-normal)

  &:hover
    cursor: pointer

@container panel (max-width: 320px)
  .shortcut
    width: 4.5rem
